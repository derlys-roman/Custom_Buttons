<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="16dp"

    >

    <Button
        android:id="@+id/button_model_1"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/Second_Button"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/button4"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/button_model_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="@string/First_Button"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/button_model_1"
        app:layout_constraintStart_toStartOf="parent"

        />

    <Button
        android:id="@+id/button_model_3"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:text="@string/Second_Button"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/button2"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_model_1"

        />
    <Button
        android:id="@+id/button_model_4"
        android:layout_width="130dp"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
       app:layout_constraintTop_toBottomOf="@id/button_model_3"
        app:layout_constraintStart_toEndOf="@id/button_model_2"
        android:text="@string/Second_Button"
        android:textSize="15sp"
        android:textColor="#AB05F2"
        android:textStyle="italic"
        android:background="@drawable/button3"
        android:textAllCaps="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>